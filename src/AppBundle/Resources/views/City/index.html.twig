<h1>City list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Lat</th>
            <th>Long</th>
            <th>Status</th>
            <th>Stations</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for document in documents %}
        <tr>
            <td><a href="{{ path('city_show', { 'id': document.id }) }}">{{ document.id }}</a></td>
            <td>{{ document.name }}</td>
            <td>{{ document.lat }}</td>
            <td>{{ document.long }}</td>
            <td>{{ document.status }}</td>
            <td>{{ document.stations|length }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('city_show', { 'id': document.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('city_edit', { 'id': document.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('city_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
