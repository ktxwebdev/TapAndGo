{% extends '::base.html.twig' %}

{% block body %}
    <div class="page-header">
        <div class="row">
            <div class="col-sm-10">
                <h1>Modification de la ville : {{ document.name }}</h1>
            </div>

        </div>
    </div>

    <form action="{{ path('city_update', { 'id': document.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">Modification</button>
        </p>
    </form>

    <ul class="record_actions">
        <li>
            <a href="{{ path('city') }}">
                Retour Ã  la liste
            </a>
        </li>
        <li>
            <form action="{{ path('city_delete', { 'id': document.id }) }}" method="post">
                {{ form_widget(delete_form) }}
                <button type="submit">Suppression</button>
            </form>
        </li>
    </ul>
{% endblock %}