{% extends '::base.html.twig' %}

{% block body %}
    <div class="page-header">
        <div class="row">
            <div class="col-sm-10">
                <h1>Nouvelle station pour la ville : {{ city.name }}</h1>
            </div>

        </div>
    </div>

    <form action="{{ path('city_id_station_create', {'id': city.id}) }}" method="post" {{ form_enctype(form) }}>
        {{ form_widget(form) }}
        <p>
            <button type="submit">Création</button>
        </p>
    </form>

    <ul class="record_actions">
        <li>
            <a href="{{ path('city_show', {'id': city.id}) }}">
                Retour à la ville
            </a>
        </li>
    </ul>

{% endblock %}